@import "goods-template/goods-template.wxss";

.goods-tab-box{
  background-color: #fff;
  border-top: 1px solid #aaa;
}

.goods-tab-nav {
  display: inline-block;
  width: 25%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #d1d1d1;
  box-sizing: border-box;
  text-align: center;
  color: #aaa;
  background-color: #fff;
}

.goods-tab-nav.on {
  color: #bcaa8a;
  border-bottom: 5rpx solid #bcaa8a;
}

.banner {
  width: 100%;
  height: 400rpx;
}

.banner image {
  width: 100%;
  height: 400rpx;
}

.content {
  display: flex;
  flex-direction: row;
  width: auto;
  flex-wrap: wrap;
  background-color: #f2f2f2;
}

.templateContainer {
  width: 47%;
  background-color: white;
  margin: 10rpx;
}

.goods-content {
  margin: 15rpx;
}

.search{
  background-color: #f2f2f2;
  margin: 20rpx;
  height: 80rpx;
  width: auto;
  display: flex;
  flex-direction: row;
}

.search-img{
  margin: auto 0 auto 20rpx;
}

.search input{
  height: 100%;
  width: 600rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.placeholder{
  font-size: 28rpx;
  color: #d1d1d1;
  margin-left: 20rpx;
}

.search-panel{
  position: absolute;
  top: 80rpx;
}

 .xx-img{
  height: 30rpx;
  width: 30rpx;
  margin: auto 25rpx auto 0rpx;
} 
page{
  background-color: #ddd;
}

.container{
  display: flex;
  flex-direction: column;
}

.headerContainer{
  display: flex;
  flex-direction: column;
  background-color: white;
}

.headerContainer image{
  width: 100%;
  height: 450rpx;
}

.headerTitle{
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  margin: 10rpx;
}

.headerDescription{
  text-indent: 0.5rem;
  font-size: 30rpx;
  margin: 10rpx;
  color: #bbb;
}

.goodsContainer{
  display: flex;
  flex-direction: row;
  background-color: white;
  margin: 12rpx;
  width: auto;
  flex-wrap:wrap;
}

.goodsItem{
  display: flex;
  flex-direction: column;
  margin: 20rpx;
}

.goodsItem image{
  width: 323rpx;
  height: 323rpx;
}

.goodsItem text{
  letter-spacing: 1rpx;
  margin-top: 10rpx;
}
.goodsTitle{
  text-align: center;
}

.price{
  text-align: center;
  color: red;
}
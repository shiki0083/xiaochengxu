.swiper-tab{  
    width: 100%;  
    border-bottom: 2rpx solid #777777;  
    text-align: center;  
    line-height: 80rpx;}  
.swiper-tab-list{  font-size: 30rpx;  
    display: inline-block;  
    width: 25%;  
    color: #777777;  
}  
.on{ color: black;  
    border-bottom: 5rpx solid black;}  
  
.swiper-box{
  display: block;
  height: 100%;
  width: 100%; 
  background-color: #eee;
  overflow: hidden;
}  

.container{
  width: 100%;
  height: 400rpx;
  margin-top: 30rpx;
  background-color: white;
}

.title{
  padding: 20rpx;
}
.middle{
  display: flex;
  flex-direction: row;
  padding: 20rpx;
}
.middle image{
  width: 150rpx;
  height: 150rpx;
  display: inline-block;
}
.middle view{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.middle view text{
  padding-top: 5rpx;
}

.footer{
  padding: 10rpx;
  float: right;
}
.footer text{
  display: block;
}
.footer-btn{
  width: auto;
  height: 50rpx;
  padding: 3rpx 10rpx;
  border: 1px solid red;
  border-radius: 10rpx;
  text-align: center;
  color: red;
  float: right;
  margin: 10rpx 10rpx 0 0;
}